<!DOCTYPE html>
<html>
<head>
    <title>Bank Accounts</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body>
    <h1>Bank Accounts</h1>
    <div class="container">
        <% if (accounts.length === 0) { %>
            <p>No accounts found.</p>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>Account Number</th>
                        <th>Account Type</th>
                        <th>Balance</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% accounts.forEach(function(account) { %>
                        <tr>
                            <td><%= account.accountNumber %></td>
                            <td><%= account.accountType %></td>
                            <td><%= account.balance %></td>
                            <td>
                                <a href="/accounts/<%= account._id %>" class="button">View</a>
                                <a href="/accounts/<%= account._id %>/edit" class="button">Edit</a>
                                <form method="POST" action="/accounts/<%= account._id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this account?');">
                                    <input type="submit" value="Delete" class="button">
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
        <a href="/accounts/new" class="button">New Account</a>
    </div>
</body>
</html>
